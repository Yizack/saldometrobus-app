{
  "name": "saldometrobus-app",
  "version": "2.3.0",
  "description": "Saldo Metrobús es un sitio de consultas de saldo y movimientos para las tarjetas de metro y metrobús de Panamá a cualquier hora del día.",
  "author": "Yizack Rangel",
  "license": "MIT",
  "type": "module",
  "homepage": "https://saldometrobus.yizack.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yizack/saldometrobus-app"
  },
  "bugs": {
    "url": "https://github.com/Yizack/saldometrobus-app/issues"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port=5173",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npm run husky:install && npm run husky:msg",
    "android": "npx cap add android",
    "ios": "npx cap add ios",
    "resources": "npx @capacitor/assets generate --android --ios --splashBackgroundColorDark #F8F9FC",
    "sync": "npx cap sync",
    "app:clean": "node cleanOutput.js",
    "app:mibus": "node miBusRutas.js",
    "app:version": "node updateVersion.js",
    "app:android:key": "openssl base64 -A -in saldometrobus_key.jks -out saldometrobus_key.jks.txt",
    "trapeze": "npx trapeze run config.yaml -y",
    "husky:install": "husky install",
    "husky:msg": "husky add .husky/commit-msg  \"npx --no -- commitlint --edit ${1}\"",
    "changelog": "npx conventional-changelog-cli -i 'CHANGELOG.md' -s -t v -p angular",
    "changelog:new": "npx conventional-changelog-cli -i 'CHANGELOG.md' -s -r 0",
    "patch": "npm version patch && git push --tags",
    "minor": "npm version minor && git push --tags",
    "major": "npm version major && git push --tags"
  },
  "devDependencies": {
    "@capacitor-community/sqlite": "^5.0.0-beta.1",
    "@capacitor/android": "^5.0.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/assets": "^2.0.4",
    "@capacitor/browser": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/clipboard": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/dialog": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/network": "^5.0.0",
    "@capacitor/preferences": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0",
    "@capacitor/toast": "^5.0.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@nuxtjs/eslint-config": "^12.0.0",
    "@trapezedev/configure": "^7.0.8",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jeep-sqlite": "^2.3.3",
    "nuxt": "^3.4.3",
    "nuxt-icon": "^0.4.0",
    "stylelint": "^15.6.1",
    "stylelint-order": "^6.0.3"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.15.1",
    "@pinia/nuxt": "^0.4.9",
    "bootstrap": "^5.3.0-alpha3",
    "chart.js": "^4.3.0",
    "leaflet-geosearch": "^3.8.0"
  },
  "overrides": {
    "vue": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
